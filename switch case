import java.util.*;
public class Case
{
    public static void main()
    {
        int choice;
        System.out.println("Enter yor choice : ");
        System.out.println("1.Pen \t 2.Pencil \t 3.Eraser");
        Scanner ms = new Scanner(System.in);
        choice=ms.nextInt();
        switch(choice)
        {
            case 1:
            System.out.println("You opted to use Pen");
            break;
            case 2:
            System.out.println("You opted to use Pencil");
            break;
            case 3:
            System.out.println("You opted to use Eraser");
            break;
            default:
            System.out.println("Invalid input");
        }
    }
}
            
           
